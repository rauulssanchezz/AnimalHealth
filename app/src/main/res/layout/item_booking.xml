<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="1dp"
    android:padding="20dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="15dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/itemBookingUserPhoto"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"
        android:src="@drawable/baseline_account_circle"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/itemBookingUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemBookingUserPhoto"
        android:text="User Name"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        />
    <TextView
        android:id="@+id/itemBookingReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemBookingUserName"
        app:layout_constraintStart_toEndOf="@id/itemBookingUserPhoto"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="Reason"
        />
    <TextView
        android:id="@+id/itemBookingPetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemBookingReason"
        app:layout_constraintStart_toEndOf="@id/itemBookingUserPhoto"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="PetName"
        />
    <TextView
        android:id="@+id/itemBookingPetBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/itemBookingPetName"
        app:layout_constraintStart_toEndOf="@id/itemBookingPetName"
        android:layout_marginHorizontal="20dp"
        android:text="PetBreed"
        />
    <TextView
        android:id="@+id/itemBookingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:text="Time:"
        />
    <TextView
        android:id="@+id/itemBookingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemBookingTime"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:text="Date:"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemBookingPetBreed"
        app:layout_constraintStart_toEndOf="@id/itemBookingUserPhoto"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="Clinic"
        android:id="@+id/itemBookingClinic"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="5dp"
        android:text="Cancelar"
        android:id="@+id/itemBookingCancelButton"
        android:textColor="@color/colorButtonText"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>